@{
    ViewBag.Title = "Index";
    Layout = null;
}

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/LoginCss.css" />

    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    @*https://codeseven.github.io/toastr/*@
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
    <script type="text/javascript" src="~/Scripts/LoginScript.js"></script>
</head>

<form>

    <div class="form-control-cust">
        <div class="form-group">
            <label for="email">Email Address</label>
            <input type="text" id="emailAddress" class="form-control" />
            <small class="form-text text-muted">Your email will remain confidential</small>
        </div>

        <div class="form-group">
            <label for="passwd">Password</label>
            <input type="password" id="passwd" class="form-control" />
        </div>

        <button class="form-group-button btn btn-primary" id="sign-in">Log in</button>
        <button class="form-group-button btn btn-primary" id="btnRegister">Register</button>
    </div>

</form>

